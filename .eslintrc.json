{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:@next/next/recommended",
    // https://github.com/vercel/next.js/blob/canary/packages/eslint-config-next/package.json
    "next",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    // "tsconfigRootDir": "color-swatch-randomizer",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": [
    "@typescript-eslint",
    // https://github.com/vercel/next.js/blob/canary/packages/eslint-plugin-next/lib/index.js
    "@next/eslint-plugin-next",
    "react",
    "react-hooks"
  ]
}